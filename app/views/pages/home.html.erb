<div class="main-container">

  <div class="banner image-fit">
    <div class="font-container">
      <h2 class="tag-line">Find your hero today...</h2>
    </div>
  </div>

  <div class="container">
  <h1>All Heroes</h1>
  <%= link_to "Add new hero", new_hero_path, class: "btn text-white bg-dark"  %>
  <div class="cards row justify-content-center">
    <p> Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime, nesciunt?</p>
    <% @heros.each do |hero| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 m-3 card-hero">
        <img src="https://unsplash.com/photos/CtboAqQcJ20">
        <div class="card-hero-infos py-3 px-2">
          <h1><%= link_to hero.title, hero_path(hero) %></h1>
          <%  if hero.bookings.empty? %>
            <li class="list-group-item">
              <%= link_to hero.title, hero_path(hero)  %>
            </li>
          <% end %>
          <p><%= hero.superpower %></p>
          <button class="btn btn-book">BOOK US</button>
        </div>
      </div>
    <% end %>
  </div>
</div>


</div>

 <%= render 'layouts/footer' %>

